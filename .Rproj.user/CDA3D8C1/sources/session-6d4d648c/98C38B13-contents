library(knitr)
library(kableExtra)
library(htmltools)

# Convert BB_IDs vector into a data frame for display
if (!is.null(params$BB_IDs) && length(params$BB_IDs) > 0) {
  df <- data.frame(BB_ID = params$BB_IDs)
  
  kable(df, format = "html") %>%
    kable_styling(
      full_width = FALSE,
      font_size = 10
    ) %>%
    row_spec(
      0,  # header row
      background = "#e0e0e0",
      bold = TRUE
    )
} else {
  HTML("No repository IDs were selected.")
}
```

